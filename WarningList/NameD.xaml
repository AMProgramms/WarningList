<Window x:Class="WpfApp1.NameD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:res="clr-namespace:WpfApp1.Properties"
        mc:Ignorable="d"
        Title="NameD" Height="100" Width="350" Closing="Window_Closing" Loaded="Window_Loaded"  >
    <Grid>
        <TextBox  HorizontalAlignment="Left" Height="70" TextWrapping="Wrap" Text="{x:Static res:Resources.Yname}" VerticalAlignment="Top" Width="126" FontSize="24" Margin="0,0,0,-1" IsReadOnly="True" />
        <TextBox x:Name="NAME" HorizontalAlignment="Left" Height="70" Margin="126,0,0,-1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" FontSize="24" KeyDown="NAME_KeyDown"/>

    </Grid>
</Window>
