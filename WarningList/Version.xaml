<Window x:Class="WpfApp1.Version"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:res="clr-namespace:WpfApp1.Properties"
        mc:Ignorable="d"
        Title="Version" Height="450" Width="800" Closing="Window_Closing" >
    <Grid Background="Black">

        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="782" Height="46" Foreground="White" FontSize="16" Margin="10,46,0,0" ><Run Text="{x:Static res:Resources.Desc}"/><Hyperlink Click="Hyperlink_Click" ><Run Text="https://github.com/AMProgramms/WarningList/wiki/All-versions"/></Hyperlink></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" Text="{x:Static res:Resources.Versions}" VerticalAlignment="Top" Height="41" Width="772" Foreground="White" FontSize="24" FontWeight="Bold"/>

    </Grid>
</Window>
