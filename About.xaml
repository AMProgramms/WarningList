        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="163" Width="812" FontSize="18" Foreground="White"><Run FontWeight="Bold" FontSize="20" Text="{x:Static res:Resources.AM}"/><LineBreak/><Run Text="----------------------------------------------------------------------------------------------------------------"/><LineBreak/><Hyperlink Click="hyperlink_Click"><Run Text="https://github.com/AMProgramms"/></Hyperlink><LineBreak/><Run Text="----------------------------------------------------------------------------------------------------------------"/><LineBreak/></TextBlock>

    </Grid>
