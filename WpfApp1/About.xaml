<Window x:Class="WpfApp1.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:res="clr-namespace:WpfApp1.Properties"
        mc:Ignorable="d"
        Title="About" Height="450" Width="800" Background="Black" Foreground="Black">
    <Grid Background="Black" Margin="0,0,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="163" Width="792" FontSize="18" Foreground="White"><Run FontWeight="Bold" FontSize="20" Text="{x:Static res:Resources.AM}"/><LineBreak/><Run Text="--------------------------------------------------------------------------------------------------------------"/><LineBreak/><Run Text="{x:Static res:Resources.AboutMe}"/><LineBreak/><Run Text="--------------------------------------------------------------------------------------------------------------"/><LineBreak/></TextBlock>
        <StackPanel Margin="555,352,0,10"
                    Orientation="Horizontal">
            <Image Source="https://bitemycoin.com/wp-content/uploads/2018/06/GitHub-Logo.png" Margin="0,10,0,13" Stretch="Fill" Width="27" />
            <TextBlock Text="" Margin="3,14,0,13" Foreground="White" Height="28" VerticalAlignment="Center" Width="184" Background="Black"><Hyperlink Click="hyperlink_Click"><Run Text="https://github.com/AMProgramms"/></Hyperlink></TextBlock>


        </StackPanel>

    </Grid>
</Window>
